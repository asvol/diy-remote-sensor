int display_time = 1000;

void display_setup()
{
	int led_count=lc.getDeviceCount();
	for (int i = 0; i < led_count; ++i)
	{
	  	lc.shutdown(i,false);
	  	lc.setIntensity(i,DISPLAY_DEFAULT_BRIGHTNESS);
	  	lc.clearDisplay(i);
	}
}

byte display_reverse_bit(byte x)
{
    int intSize = 8;
    byte y = 0;
    for (int position = 7; position >= 0; position--)
    {
        y += ((x & 1) << position);
        x >>= 1;
    }
    return y;
}

void display_draw_char(int pos, char ch)
{
  for(int i=0;i<8;i++)
  {
    byte x = font8x8_basic[ch][i];
    x = display_reverse_bit(x);
    lc.setRow(pos,i,x);
  }
}

void display_draw_str(char* str)
{
	int led_cnt = lc.getDeviceCount();
	int i=0;
	while(str[i]!='\0' || i>led_cnt)
	{
		display_draw_char(led_cnt-i-1,str[i]);
		++i;
	}
}

enum DISPLAY_STATE_ENUM{
    DISPLAY_TEMPERATURE,
    DISPLAY_HUMIDITY
};

int display_state = DISPLAY_TEMPERATURE;
int state_view = 0;
int current_state_time = 0;
int switch_state_when_time = 0;


void display_loop(unsigned int delta_time)
{
    current_state_time+=delta_time;

    display_time+=delta_time;
    if (display_time<DISPLAY_REFRESH_TIME_MS) return;
    display_time = 0;

    

    if (recv_state == RECV_STATE_ERROR)
    {
        display_draw_str("----");
    }
    else 
    {
        switch (display_state)
        {
            case DISPLAY_TEMPERATURE:
            {
                if (current_state_time >=switch_state_when_time)
                {
                    display_state = DISPLAY_HUMIDITY;
                    current_state_time = 0;
                    switch_state_when_time = DISPLAY_HUMIDITY_TIME_MS;
                }

                int int_temp = temperature;
                char digit[16] = "      /n";
                sprintf(digit,"t%3d",int_temp);
                display_draw_str(digit);
                break;
            }
            case DISPLAY_HUMIDITY:
            {
                if (current_state_time >=switch_state_when_time)
                {
                    display_state = DISPLAY_TEMPERATURE;
                    current_state_time = 0;
                    switch_state_when_time = DISPLAY_TEMPERATURE_TIME_MS;
                }
                
                int int_humidity = humidity;
                char digit_h[16] = "      /n";
                sprintf(digit_h,"H%3d",int_humidity);
                display_draw_str(digit_h);
                break;
            }
        }
            
                
    }
    
    
}

