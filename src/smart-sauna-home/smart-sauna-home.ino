unsigned long prev_time;

void setup() 
{
    prev_time = millis();
    serial_setup();
    display_setup();
    led_setup();
    nrf_setup();
    

}

void loop() 
{
    unsigned long current_time = millis();

    // if overflow ~ 56 days
    if (current_time < prev_time) prev_time = current_time;

    unsigned int delta_time = current_time - prev_time;
    prev_time = current_time;

    nrf_loop(delta_time);
    led_loop(delta_time);
    display_loop(delta_time);
    serial_loop(delta_time);


}
